---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app.kubernetes.io/name: homely-mqtt
  name: homely-mqtt
  namespace: default
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: homely-mqtt
  template:
    metadata:
      labels:
        app.kubernetes.io/name: homely-mqtt
      name: homely-mqtt
      namespace: default
    spec:
      containers:
      - image: "{{ environ('main_image') }}:{{ environ('VERSION') }}"
        name: homely-mqtt
        liveness:
          path: /_/live
        readiness:
          path: /_/ready
        resources:
          requests:
            cpu: 150m
            memory: 64Mi
        volumeMounts:
        - mountPath: /tmp
          name: writable-tmp
        env:
        - name: HOMELY_MQTT_MODE
          value: Release
        - name: HOMELY_MQTT_BIND_ADDRESS
          value: 0.0.0.0
        - name: HOMELY_MQTT_PORT
          value: "3000"
      volumes:
      - emptyDir: {}
        name: writable-tmp
